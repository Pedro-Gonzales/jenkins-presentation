pipeline{
    agent any

    tools {nodejs "nodejs"}

    stages{
        stage ("Checkout do código"){
            steps{
                git url:  'https://github.com/Pedro-Gonzales/jenkins-presentation', branch: 'master'
            }
        }

        stage ('Construção do build node') {
            steps{
                sh 'npm install'
            }
        }

        stage ('Rodagem dos testes') {
            steps{
                sh 'npm test'
            }
        }
    }
}