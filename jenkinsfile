pipeline{
    agent any

    tools {nodejs "node"}

    stages{
        stage ("Checkout do código"){
            steps{
                git url:  'https://github.com/Pedro-Gonzales/jenkins-presentation', branch: 'master'
            }
        }

        stage ('Construção do build node') {
            steps{
                sh 'npm install'
            }
        }

        stage ('Rodagem dos testes') {
            steps{
                sh 'npm test'
            }
        }

        stage ('Construção da imagem docker') {
            steps{
                scripts{
                    dockerapp = docker.build("pedrogonzalescorrea/jenkins-example:${env.BUILD_ID}",
                                                '-f .src/Dockerfile ./src')
                }
            }
        }
    }
}